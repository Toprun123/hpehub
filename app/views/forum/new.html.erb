<%= stylesheet_link_tag 'pages/forum', media: 'all' %>

<div class="form-container">
  <h2>Create Post</h2>
  <%= form_with model: @forum, url: forums_create_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: @forum %>
    <div class="field">
      <%= f.label :title, "Post Title" %><br />
      <%= f.text_field :title, required: true, placeholder: "Enter post title" %>
    </div>
    <div class="field">
      <%= f.label :content, "Post Content" %><br />
      <%= f.text_area :content, required: true, placeholder: "Enter post content" %>
    </div>
    <div class="actions">
      <%= f.submit "Create Post" %>
    </div>
  <% end %>
</div>
